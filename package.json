{
  "name": "bugcleaners",
  "version": "1.0.0",
  "description": "The source code for BugCleaners.com",
  "main": "app.js",
  "dependencies": {
    "assetwatcher": "^1.3.4",
    "body-parser": "^1.14.0",
    "closure-compiler-service": "^0.6.1",
    "coffee-script": "^1.10.0",
    "compression": "^1.5.2",
    "connect-ensure-login": "^0.1.1",
    "connect-flash": "^0.1.1",
    "emailjs": "^0.3.16",
    "express": "^4.13.3",
    "express-debug": "^1.1.1",
    "express-force-ssl": "^0.3.0",
    "express-session": "^1.11.3",
    "foreach-cli": "^1.0.1",
    "jade": "^1.11.0",
    "jstransformer": "0.0.4",
    "jstransformer-markdown": "^1.1.0",
    "mongodb": "^2.1.6",
    "monkii": "^1.1.5",
    "node-sass": "^3.4.2",
    "passport": "^0.3.0",
    "passport-local": "^1.0.0",
    "simplyimport": "^1.0.10",
    "ua-parser-js": "^0.7.10",
    "uglify-js": "^2.6.1"
  },
  "devDependencies": {
    "forever": "^0.15.1"
  },
  "scripts": {
    "server": "npm run server:startDB & npm run server:start",
    "server:startDB": "sudo mongod --fork --logpath ~/mongolog",
    "server:start": "forever start -d -a -l /var/www/bugcleaners.com/logfile -c 'coffee' -w --watchDirectory /var/www/bugcleaners.com/app.coffee app.coffee",
    "server:start:local": "forever start -d -a -l /Users/danielkalen/Projects/bugcleaners/logfile -c 'coffee' -w --watchDirectory /Users/danielkalen/Projects/bugcleaners/app.coffee app.coffee",
    "server:stop": "forever stop app.coffee",
    "compile": "npm run compile:js && npm run compile:sass",
    "compile:js": "foreach -g '_assets/coffee/*.coffee' -x 'simplyimport -i #{path} | coffee -s -c > public/js/#{name}.pretty.js && uglifyjs public/js/#{name}.pretty.js -m -c keep_fargs -o public/js/#{name}.js'",
    "compile:sass": "foreach -g '_assets/sass/*.sass' -x 'node-sass --functions ./sass-fns.js -x --output-style compressed #{path} --output public/css/'",
    "compile:sass:pretty": "foreach -g '_assets/sass/*.sass' -x 'node-sass --functions ./sass-fns.js -x --output-style nested #{path} --output public/css/'",
    "watch": "npm run watch:js & npm run watch:sass",
    "watch:js": "assetwatcher -d '_assets/coffee/' -e 'coffee' -i '**/_plugins/*' '**/_tinymce/*' -x 'simplyimport -i #{path} | coffee -s -c > public/js/#{name}.pretty.js && uglifyjs public/js/#{name}.pretty.js -m -c keep_fargs > public/js/#{name}.js'",
    "watch:sass": "assetwatcher -d '_assets/sass/' -e 'sass' -i '**/_parts_provider.old/*' -x 'node-sass --functions ./sass-fns.js -x --output-style compressed #{path} --output public/css/'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielkalen/bugcleaners.git"
  },
  "author": "Daniel Kalen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danielkalen/bugcleaners/issues"
  },
  "homepage": "https://github.com/danielkalen/bugcleaners#readme"
}
