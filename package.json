{
  "name": "bugcleaners",
  "version": "1.0.0",
  "description": "The source code for BugCleaners.com",
  "main": "app.js",
  "dependencies": {
    "assetwatcher": "^1.3.4",
    "body-parser": "^1.14.0",
    "closure-compiler-service": "^0.6.1",
    "coffee-script": "^1.10.0",
    "compression": "^1.5.2",
    "connect-ensure-login": "^0.1.1",
    "connect-flash": "^0.1.1",
    "emailjs": "^0.3.16",
    "express": "^4.13.3",
    "express-debug": "^1.1.1",
    "express-force-ssl": "^0.3.0",
    "express-session": "^1.11.3",
    "fireworm": "^0.7.0",
    "foreach-cli": "^1.0.1",
    "jade": "^1.11.0",
    "jstransformer": "0.0.4",
    "jstransformer-coffee-script": "^1.0.0",
    "jstransformer-markdown": "^1.1.0",
    "mongodb": "^2.1.6",
    "monkii": "^1.1.5",
    "node-sass": "^3.4.2",
    "passport": "^0.3.0",
    "passport-local": "^1.0.0",
    "redis": "^2.4.2",
    "simplyimport": "^1.2.2",
    "ua-parser-js": "^0.7.10",
    "uglify-js": "^2.6.2"
  },
  "devDependencies": {
    "forever": "^0.15.1"
  },
  "scripts": {
    "server": "npm run db & npm run server:start",
      "server:local": "npm run db:local & npm run server:start:local",
      "server:start": "forever start -d -a -l /var/www/bugcleaners.com/logfile -c 'coffee' app.coffee",
        "server:start:local": "nodemon -e coffee,json --ignore _assets/ --ignore node_modules/ --ignore _views/ --ignore package.json app.coffee",
      "server:stop": "forever stop app.coffee",
      "server:restart": "npm run server:stop && npm run server:start",
    "db": "npm run db:mongo && npm run db:redis",
      "db:mongo": "mongod --auth --fork --logpath /root/mongolog --dbpath /var/db",
      "db:redis": "service redis_6379 start",
      "db:local": "npm run db:mongo:local && npm run db:redis:local",
        "db:mongo:local": "sudo mongod --fork --logpath ~/mongolog",
        "db:redis:local": "redis-server /usr/local/etc/redis.conf",
    "compile": "npm run compile:js && npm run compile:sass",
    "compile:js": "foreach -g '_assets/coffee/*.coffee' -x 'simplyimport -i #{path} | coffee -b -s -c > public/js/#{name}.pretty.js && uglifyjs public/js/#{name}.pretty.js -m -c keep_fargs,unused=false -o public/js/#{name}.js'",
    "compile:sass": "foreach -g '_assets/sass/*.sass' -x 'node-sass --functions ./sass-fns.js -x --output-style compressed #{path} --output public/css/'",
    "compile:sass:pretty": "foreach -g '_assets/sass/*.sass' -x 'node-sass --functions ./sass-fns.js -x --output-style nested #{path} --output public/css/'",
    "watch": "npm run watch:js & npm run watch:sass",
    "watch:js": "assetwatcher -d '_assets/coffee/' -e 'coffee' -i '**/_plugins/*' '**/_tinymce/*' -x 'simplyimport -i #{path} | coffee -b -s -c > public/js/#{name}.pretty.js && uglifyjs public/js/#{name}.pretty.js -m -c keep_fargs,unused=false > public/js/#{name}.js'",
    "watch:sass": "assetwatcher -d '_assets/sass/' -e 'sass' -i '**/_parts_provider.old/*' -x 'node-sass --functions ./sass-fns.js -x --output-style compressed #{path} --output public/css/'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielkalen/bugcleaners.git"
  },
  "author": "Daniel Kalen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danielkalen/bugcleaners/issues"
  },
  "homepage": "https://github.com/danielkalen/bugcleaners#readme"
}
