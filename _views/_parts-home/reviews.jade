section.section.reviews
	h2.reviews-title What Our Clients Say About Us

	.reviews-list
		each review in reviews
			.reviews-list-item(itemscope, itemtype="http://schema.org/Review")
				.reviews-list-item-img
					img.reviews-list-item-img-photo(alt=review.name+", "+review.position, src="/img/reviewers/"+review.slug+".jpg")
				.reviews-list-item-name(itemprop="author")= review.name
				.reviews-list-item-subtitle(itemprop="jobTitle")= review.subtitle
				.reviews-list-item-excerpt
					p.reviews-list-item-excerpt-text(itemprop="reviewBody")= review.review