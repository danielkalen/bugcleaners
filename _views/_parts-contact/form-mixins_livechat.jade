mixin livechatFieldsetInput(name, label, classes, required, inputClasses)
  - if (required) classes = classes + ' required'
  .livechat-login-form-fieldset.fieldset.input_text(class=classes)
    label.livechat-login-form-fieldset-label(for=name)=label
    input.livechat-login-form-fieldset-input.input(id=name, name=name, type="text", placeholder=label, class=inputClasses)



mixin livechatFieldsetSelect(name, label, classes, required, items)
  - if (required) classes = classes + ' required'
  .livechat-login-form-fieldset.fieldset.select(class=classes)
    label.livechat-login-form-fieldset-label(for=name)=label
    select.livechat-login-form-fieldset-select.default_component.input(id=name, name=name)
      option(value='')=label
      -if (items)
        each item, index in items
          option(value=index)=item
    div.livechat-login-form-fieldset-select.new


mixin livechatFieldsetTextarea(name, label, classes, required, inputClasses)
  - if (required) classes = classes + ' required'
  .livechat-login-form-fieldset.fieldset.textarea(class=classes)
    label.livechat-login-form-fieldset-label(for=name)=label
