mixin livechatFieldsetCheckboxSingle(name, label, classes, required)
  - if (required) classes = classes + ' required'
  .livechat-login-form-fieldset.fieldset.checkbox(class=classes)
    .livechat-login-form-fieldset.fieldset-checkbox.input-button
      div.livechat-login-form-fieldset-checkbox-box
      label.livechat-login-form-fieldset-checkbox-label(for=name)=label
      input.input.checkbox(id=name, name=name type='checkbox')


mixin livechatFieldsetCheckbox(name, label, classes, required, items)
  - if (required) classes = classes + ' required'
  - classes = classes + ' options_' + items.length

  .livechat-login-form-fieldset.fieldset.checkbox(class=classes)
    .livechat-login-form-fieldset-label=label
    each item, index in items
      - id = name + '_' + index
      .livechat-login-form-fieldset-checkbox.input-button
        div.livechat-login-form-fieldset-checkbox-box
        label.livechat-login-form-fieldset-checkbox-label(for=id)=item
        input.input.checkbox(id=id, name=name, type='checkbox', val=item)


