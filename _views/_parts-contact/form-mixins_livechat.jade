mixin livechatFieldsetRange(name, label, classes, required)
  //- - if (required) classes = classes + ' required'
  .livechat-login-form-fieldset.fieldset.range.required(class=classes)
    .livechat-login-form-fieldset-label=label
    .livechat-login-form-fieldset-range(class=classes)
      .livechat-login-form-fieldset-range-start
      .livechat-login-form-fieldset-range-end
    input.livechat-login-form-fieldset-input.input(id=name, name=name, type="hidden")



mixin livechatFieldsetFile(name, label, classes, required, inputClasses)
  - if (required) classes = classes + ' required'
  .livechat-login-form-fieldset.fieldset.file(class=classes)
    label.livechat-login-form-fieldset-label(for=name)=label
    .livechat-login-form-fieldset-file_wrap
      input.livechat-login-form-fieldset-file.input(id=name, name=name, type="file", class=inputClasses, accept='.pdf, .doc, .png, .tiff, .jpg, .rtf, .rtfd, .pages, .xls, .csv', multiple='')

