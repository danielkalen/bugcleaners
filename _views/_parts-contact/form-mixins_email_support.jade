mixin emailFieldsetCheckboxSingle(name, label, classes, required)
  - if (required) classes = classes + ' required'
  .email_support-options-item-form-fieldset.fieldset.checkbox(class=classes)
    .email_support-options-item-form-fieldset.fieldset-checkbox.input-button
      div.email_support-options-item-form-fieldset-checkbox-box
      label.email_support-options-item-form-fieldset-checkbox-label(for=name)=label
      input.input.checkbox(id=name, name=name type='checkbox')


mixin emailFieldsetCheckbox(name, label, classes, required, items)
  - if (required) classes = classes + ' required'
  - classes = classes + ' options_' + items.length

  .email_support-options-item-form-fieldset.fieldset.checkbox(class=classes)
    .email_support-options-item-form-fieldset-label=label
    each item, index in items
      - id = name + '_' + index
      .email_support-options-item-form-fieldset-checkbox.input-button
        div.email_support-options-item-form-fieldset-checkbox-box
        label.email_support-options-item-form-fieldset-checkbox-label(for=id)=item
        input.input.checkbox(id=id, name=name, type='checkbox', val=item)


