mixin emailFieldsetInput(name, label, classes, required, inputClasses)
  - if (required) classes = classes + ' required'
  .email_support-options-item-form-fieldset.fieldset.input_text(class=classes)
    label.email_support-options-item-form-fieldset-label(for=name)=label
    input.email_support-options-item-form-fieldset-input.input(id=name, name=name, type="text", placeholder=label, class=inputClasses)



mixin emailFieldsetSelect(name, label, classes, required, items)
  - if (required) classes = classes + ' required'
  .email_support-options-item-form-fieldset.fieldset.select(class=classes)
    label.email_support-options-item-form-fieldset-label(for=name)=label
    select.email_support-options-item-form-fieldset-select.default_component.input(id=name, name=name)
      option(value='')=label
      -if (items)
        each item, index in items
          option(value=index)=item
    div.email_support-options-item-form-fieldset-select.new


